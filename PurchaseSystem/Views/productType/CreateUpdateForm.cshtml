
@model PurchaseSystem.Common.ProductTypeMst

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("CreateUpdateForm", "productType"))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(s => s.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(s => s.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>

        <div class="form-control-static">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

}

@Html.ActionLink("Back To List", "productTypeList", "productType")